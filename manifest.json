{
  "manifest_version": 3,
  "name": "studio-toolbar-plus",
  "version": "0.12.1",
  "description": "A simple toolbar extension to give you more super powers in GraFx Studio",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "downloads.shelf",
    "webRequest",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.chiligrafx.com/*",
    "*://*.chili-publish.online/*",
    "*://*.chiligrafx-dev.com/*"
  ],
  "background": {
    "service_worker": "downloader.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chiligrafx.com/environments/*/studio/templates/*",
        "*://chiligrafx-dev.com/environments/*/studio/templates/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/index.js", "dist/index.css"],
      "matches": ["*://*.chiligrafx.com/*", "*://*.chiligrafx-dev.com/*"]
    }
  ],
  "appConfig": {
    "showSnapshot": {
      "enabled": false,
      "status": "deprecated"
    },
    "showFramePositionViewer": {
      "enabled": false,
      "status": "deprecated"
    },
    "showLayoutManager": {
      "enabled": false,
      "status": "experimental"
    },
    "showMagicLayouts": {
      "enabled": false,
      "status": "experimental"
    },
    "showAspectLock": {
      "enabled": true,
      "status": "none"
    },
    "showLayoutImageMapper": {
      "enabled": true,
      "status": "sponsored"
    },
    "showUploadDownload": {
      "enabled": true,
      "status": "sponsored"
    },
    "showTestError": {
      "enabled": false,
      "status": "none"
    },
    "showConnectorCleanup": {
      "enabled": false,
      "status": "experimental"
    },
    "showManualCropManager": {
      "enabled": true,
      "status": "sponsored"
    },
    "showOutput": {
      "enabled": true,
      "status": "none"
    }
  }
}
